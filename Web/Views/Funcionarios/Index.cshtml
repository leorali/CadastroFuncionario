@using ViewModel
@model FuncionariosView

@{
    ViewBag.Title = "Cadastro de Funcionários";
}
@{
    var areasSelectList = (SelectList)ViewBag.AreasSelectList;
    var cargosSelectList = (SelectList) ViewBag.CargosSelectList;
}

<h2>Lista de Funcionários</h2>
<div>
    <p>Nome:Cargo:Area:Gestor:</p>
    @using (Html.BeginForm())
    {
        @Html.TextBox("Nome")
        @Html.DropDownListFor(model => model.PesquisaAreaId, areasSelectList, "Selecione")
        @Html.DropDownListFor(model => model.PesquisaCargoId, cargosSelectList, "Selecione")
        <input type="submit" value="Pesquisar" />
    }

    <input type="button" value="Novo" onclick="location.href = '@Url.Action("Create", "Funcionarios")'" />
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nome")
        </th>
        <th>
            @Html.DisplayName("Sexo")
        </th>
        <th>
            @Html.DisplayName("Cpf")
        </th>
        <th>
            @Html.DisplayName("Logradouro")
        </th>
        <th>
            @Html.DisplayName("Complemento")
        </th>
        <th>
            @Html.DisplayName("Cep")
        </th>
        <th>
            @Html.DisplayName("Cargo")
        </th>
        <th>
            @Html.DisplayName("Area")
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model..TipoDeBeneficio)
            </th>
            <th></th>*@
    </tr>

    @foreach (var item in Model.Funcionarios)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco.Logradouro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco.Complemento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco.Cep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo.NomeCargo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo.Area.NomeArea)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Beneficio.TipoDeBeneficio)
                </td>*@
            <td>
                @Html.ActionLink("Alterar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

